---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="一个简约优雅的博客。" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<header>
			<div class="header-inner">
				<a href="/" class="site-title">纽约客风格</a>
				<nav>
					<a href="/">首页</a>
					<a href="/about">关于</a>
				</nav>
			</div>
			<hr class="header-line" />
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} 纽约客风格. 版权所有.</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--bg-color: #FDFBF7;
		--text-color: #222;
		--accent-color: #d00;
		/* Added Noto Serif SC and system Chinese serif fonts */
		--font-serif: 'Noto Serif SC', 'Songti SC', 'SimSun', 'Times New Roman', serif;
		--font-display: 'Playfair Display', 'Noto Serif SC', serif;
	}
	html {
		font-family: var(--font-serif);
		background: var(--bg-color);
		color: var(--text-color);
		line-height: 1.6;
		font-size: 18px;
	}
	body {
		margin: 0;
		padding: 0;
		max-width: 900px;
		margin-left: auto;
		margin-right: auto;
		padding: 2rem;
	}
	a {
		color: inherit;
		text-decoration: none;
		border-bottom: 1px solid transparent;
		transition: border-color 0.2s;
	}
	a:hover {
		border-bottom-color: var(--text-color);
	}
	
	/* Typography */
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-display);
		font-weight: 700;
		margin-top: 2rem;
		margin-bottom: 1rem;
		line-height: 1.2;
	}
	h1 { font-size: 3rem; margin-top: 0; }
	h2 { font-size: 2.2rem; }
	h3 { font-size: 1.8rem; }
	
	p {
		margin-bottom: 1.5rem;
	}

	/* Header */
	header {
		margin-bottom: 4rem;
		text-align: center;
	}
	.header-inner {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		padding-bottom: 1rem;
	}
	.site-title {
		font-family: var(--font-display);
		font-size: 2.5rem;
		/* font-style: italic; Removed italic for Chinese title often looks better normal, or keep if Noto supports it well. */
		letter-spacing: -0.02em;
	}
	.header-line {
		border: 0;
		height: 4px; /* Double line effect */
		border-top: 1px solid #333;
		border-bottom: 1px solid #333;
		margin: 0;
	}
	nav {
		display: flex;
		gap: 1.5rem;
		font-family: var(--font-display);
		/* text-transform: uppercase; Chinese doesn't have uppercase */
		font-size: 1rem;
		letter-spacing: 0.05em;
	}

	/* Footer */
	footer {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid #ddd;
		text-align: center;
		font-size: 0.9rem;
		color: #666;
	}
</style>
