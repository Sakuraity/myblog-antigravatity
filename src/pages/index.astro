---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Kangyuan's Blog">
	<section class="flex flex-col gap-16">
		{posts.map((post) => (
			<article class="group relative flex flex-col items-start space-y-3">
				<div class="flex items-center gap-3 text-xs font-medium tracking-widest uppercase text-text-muted-light dark:text-text-muted-dark">
					<time datetime={post.data.pubDate.toISOString()}>
						{post.data.pubDate.toLocaleDateString('zh-CN', {
							year: 'numeric',
							month: 'long',
							day: 'numeric',
						})}
					</time>
					{post.data.category && (
						<>
							<span class="w-px h-3 bg-gray-300 dark:bg-gray-700"></span>
							<span class="text-primary">{post.data.category}</span>
						</>
					)}
					{post.data.tags && post.data.tags.length > 0 && (
						<>
							<span class="w-px h-3 bg-gray-300 dark:bg-gray-700"></span>
							<div class="flex gap-2">
								{post.data.tags.map(tag => (
									<a href={`/tags/${tag}`} class="hover:text-primary transition-colors">#{tag}</a>
								))}
							</div>
						</>
					)}
				</div>
				<h2 class="text-3xl font-serif font-bold leading-tight text-text-light dark:text-text-dark group-hover:text-primary transition-colors duration-200">
					<a href={`/posts/${post.slug}/`}>
						<span class="absolute inset-0"></span>
						{post.data.title}
					</a>
				</h2>
				<p class="text-base text-text-muted-light dark:text-text-muted-dark leading-relaxed line-clamp-3">
					{post.data.description}
				</p>
				<div class="text-sm font-medium text-text-light dark:text-text-dark underline decoration-gray-300 dark:decoration-gray-700 underline-offset-4 group-hover:decoration-primary transition-all">
					阅读全文 &rarr;
				</div>
			</article>
		))}
	</section>
</Layout>
